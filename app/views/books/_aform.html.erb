<%= form_with(model: @book, url: books_path, local: true) do |form| %>
  <div class="form-group">
    <%= form.label :name %>
    <%= form.text_field :name, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= form.label :release_date %>
    <%= form.date_field :release_date, class: "form-control" %>
  </div>
  <div class="mb-3">
    <%= form.label :author_id %>
    <%= form.collection_select :author_id, Author.all, :id, :name, {}, { class: "form-control" } %>
  </div>
  <div class="actions">
    <%= form.submit "Create Book", class: "btn btn-primary" %>
  </div>
<% end %>
