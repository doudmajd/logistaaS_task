<%= form_for(@book) do |f| %>
  <div class="mb-3">
    <%= f.label :name %>
    <%= f.text_field :name, class: "form-control", placeholder: "Book Name" %>
  </div>
  <div class="mb-3">
    <%= f.label :release_date %>
    <%= f.date_field :release_date, class: "form-control", placeholder: "Release Date" %>
  </div>
  <div class="mb-3">
    <%= f.submit class: "btn btn-success"
  </div>
<% end %>
