<h1>Edit Book</h1>

<%= form_for @book do |f| %>
  <div class="mb-3">
    <%= f.label :name %>
    <%= f.text_field :name, class: "form-control" %>
  </div>
  <div class="mb-3">
    <%= f.label :release_date %>
    <%= f.date_field :release_date, class: "form-control" %>
  </div>
  <div class="mb-3">
    <%= f.label :author_id %>
    <%= f.collection_select :author_id, Author.all, :id, :name, {}, { class: "form-control" } %>
  </div>
  <div class="mb-3">
    <%= f.submit "Update Book", class: "btn btn-primary" %>
  </div>
<% end %>

<%= link_to 'Back', books_path, class: 'btn btn-secondary' %>
