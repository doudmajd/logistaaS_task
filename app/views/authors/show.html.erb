<h1><%= @author.name %></h1>
<div class="card">
  <div class="card-body">
    <h5 class="card-title">Author Details</h5>
    <p class="card-text"><strong>Name:</strong> <%= @author.name %></p>
    <p class="card-text"><strong>ID:</strong> <%= @author.id %></p>
    <p class="card-text"><strong>Email:</strong> <%= @author.email %></p>
  </div>
</div>
<%= link_to 'Edit', edit_author_path(@author), class: 'btn btn-primary' %> |
<%= link_to 'Back', authors_path, class: 'btn btn-secondary' %>
